<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardMaxElevation="3dp"
    app:contentPadding="5dp"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderIdTV_Seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="121212"
            android:textColor="@color/colorBlack"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/orderDateTv_Seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyy"
            android:layout_toStartOf="@id/next_Iv_Seller"
            android:textColor="@color/colorBlack"
            >

        </TextView>
        <TextView
            android:id="@+id/emilTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/orderIdTV_Seller"

            >

        </TextView>
        <!--- order amount-->

        <TextView
            android:id="@+id/amountTv_Seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:32.33$ "
            android:layout_below="@id/emilTv"

            >

        </TextView>

        <TextView
            android:id="@+id/orderStatusTV_Seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            android:textColor="@color/Greencolor"
            android:layout_toStartOf="@id/next_Iv_Seller"
            android:layout_marginTop="5dp"
            android:layout_below="@id/emilTv">
        </TextView>

        <ImageButton
            android:id="@+id/next_Iv_Seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_navigate_next_grey"
            android:layout_centerVertical="true"
            android:background="@null">
        </ImageButton>
    </RelativeLayout>


</androidx.cardview.widget.CardView>