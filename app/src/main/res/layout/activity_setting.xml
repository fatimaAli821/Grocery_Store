<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_rec101"
        android:padding="10dp">


        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_keyboard_backs_grey"
            android:background="@null">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textSize="20sp">

        </TextView>

    </RelativeLayout>
    <!---Switch enable/disable notification-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/fcmSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/color_white"
            android:text="Push Notification">

        </androidx.appcompat.widget.SwitchCompat>
        <TextView
            android:id="@+id/NotificationStatusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fcmSwitch"
            android:text="Notification disable"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:background="@color/color_white"
            android:textColor="@color/colorGrey02">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Greycolor00"
            android:layout_below="@+id/NotificationStatusTv">

        </View>


    </RelativeLayout>




</LinearLayout>